{% block js_after %}
    <!-- AdminLTE for demo purposes -->
    <script src="{{ asset('dist/js/demo.js') }}"></script>
    <!-- Page specific script -->
    <script>
        class MemberShipView{
            constructor(data, jquery){
                this._data = data;
                this._jquery = jquery
            }

            set data(value) {
                this._data = value;
            }

            ui(){
                console.log(this._data)
                const $container = this._jquery('<div></div>');
                const $element = this._jquery('<span onclick="alert(\'\')" class="badge badge-success"></span>')
                $element.html(`${this._data.membership.length} org`);
                $element.appendTo($container);
                return $container
            }
        }
        $(function () {
            $("#example1").DataTable({
                processing: true,
                serverSide: true,
                ajax: Routing.generate('list_users', {}),
                "columnDefs": [

                    {
                        "targets": 3,
                        "render": function (data, type, row, meta) {
                            return '<button class="btn btn-primary" title="update security profile"><i class="fa fa-user-lock"></i></button> '
                        }
                    }
                ],
                columns: [
                    {data: 'id'},
                    {data: 'email'},
                    {
                        "data":null,
                        "render": function (data, type, row, meta) {
                            let memberShipView = new MemberShipView(data, $)
                            return memberShipView.ui().html()
                        }
                    },
                    {}
                ]
            })
        });
    </script>
{% endblock %}
